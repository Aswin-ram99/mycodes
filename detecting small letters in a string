#include <stdio.h>
void lowerUpper(char arr[]);
int main(){
    char name[100];
    printf("Your name sir ");
    scanf("%s", &name);
    lowerUpper(name);

}

void lowerUpper(char arr[]){
    for(int i=0; arr[i]!='\0'; i++){
        if (arr[i]=='a'){
            arr[i]='A';
        }
        if (arr[i]=='e'){
            arr[i]='E';
        }
        if (arr[i]=='i'){
            arr[i]='I';
        }
        if (arr[i]=='o'){
            arr[i]='O';
        }
        if (arr[i]=='u'){
            arr[i]='U';
        }
    }
    printf("%s" , arr);
}
